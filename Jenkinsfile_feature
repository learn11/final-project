pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
                containers:
                  - name: slave
                    image: docker:latest
                    tty: true
                    securityContext:
                        privileged: true
                  - name: pytest
                    image: mikey8520/tests
                    tty: true
                    securityContext:
                        privileged: true
                  - name: maven
                    image: maven:alpine
                    command:
                    - cat
                    tty: true
                  - name: busybox
                    image: busybox
                    command:
                    - sleep
                    - "3600"
                    tty: true
            '''
        }
    }

    stages {
        stage('checkout git') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('testing with pytest') {
            steps {
                container('pytest') {
                    script {
                        sh 'cd ./fast_api && python -m pytest'
                    }
                }
            }
        }

        stage('Merge to main') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'git')]) {
                        sh '''
                        git config --global user.email "jenkins@example.com"
                        git config --global user.name "Jenkins"
                        git checkout main
                        git merge origin/feature --no-ff -m "Merge branch 'feature'"
                        git push -u origin main
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline SUCCESS!'
        }
        failure {
            echo 'Pipeline FAILED, check the logs for more information!'
        }
    }
}
